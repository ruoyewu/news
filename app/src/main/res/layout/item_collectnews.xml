<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="简略信息简略信息简略信息简略信息简略信息简略信息简略信息简略信息简略信息简略信息简略信息简略信息简略信息简略信息简略信息"
        android:textSize="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:id="@+id/collection_news_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="来自"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="新浪网"
            android:layout_marginLeft="10dp"
            android:id="@+id/collection_news_source"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="2018:07:07"
            android:layout_marginLeft="10dp"
            android:id="@+id/collection_news_time"/>
    </LinearLayout>
</LinearLayout>